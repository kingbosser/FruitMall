extends ./admin.pug
block content
	.section-wrap
		h1 产品信息编辑
		form(method="post" action="/admin/addProduct")
			ul
				li
					label(for="") 商品名称：
					input(type="text" id="" name="title")
				li
					label(for="") 商品图片：
					input(type="file" id="" name="imgFile")
				li
					label(for="") 商品市场价：
					input(type="text" id="" name="delPrice")
				li
					label(for="") 商品售价：
					input(type="text" id="" name="shopPrice")
				li
					input(type="submit" value="添加")
	.section-wrap
		h1 产品列表
		table
			thead
				tr
					th 商品图片
					th 商品标题
					th 市场价
					th 售价
					th 添加日期
					th(colspan="2") 操作
			tbody
				tr(ng-repeat="product in products")
					td
						img(src="/static/images/{{product.imgFile}}")
					td(ng-bind="product.tilte")
					td(ng-bind="product.delPrice")
					td(ng-bind="product.shopPrice")
					td 1992.1.2
					td 删除
					td 修改
			tfoot
				tr
					td(colspan="7") 已经是全部添加商品